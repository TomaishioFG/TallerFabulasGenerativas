<!-- custom_radio_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Radio de los bordes -->
            <solid android:color="#F44336" /> <!-- Color de fondo cuando está seleccionado -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Radio de los bordes -->
            <solid android:color="#E0E0E0" /> <!-- Color de fondo cuando no está seleccionado -->
        </shape>
    </item>
</selector>
